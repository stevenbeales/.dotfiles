# personal aliases

alias bc='bc -l'
alias mount='mount |column -t'

alias zshconfig="code ~/.zshrc"
alias ohmyzsh="code ~/.oh-my-zsh"
alias df="df -h"
alias top="htop"

alias q='exit'
alias c='clear'
alias h='history'
alias cs='clear;ls'
alias p='cat'
alias pd='pwd'
alias j='autojump'
alias la='ls -lah'
alias ll='ls -l'
alias pd='pwd'
alias t='time'
alias k='kill'
alias null='/dev/null'

alias home='cd ~'
alias root='cd /'
alias dtop='cd ~/Desktop'
alias dbox='cd ~/Dropbox'
alias gdrive='cd ~/Google\ Drive'

alias o=open
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..; cd ..; cd ..'
alias pv='cd -'

alias g='git'
alias st='git status'
alias com='git commit -m'
alias clone='git clone'
alias sth='git stash'
alias lg='git log'
alias u='git add -u'
alias all='git add .'

alias tar='gtar'

alias pip="python3 -m pip"
alias python='python3'
alias pythonserver='python3 -m http.server'

# Shortcuts to vimrc and bashrc
alias vimrc='code ~/.vimrc'
alias zshrc='code ~/.zshrc'
alias loadzsh='source ~/.zshrc'
alias loadsecrets='source ~/.secrets.sh'

alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

alias vi=vim
alias svi='sudo vi'
alias vis='vim "+set si"'
alias edit='code'

alias mkcd='foo(){ mkdir -p "$1"; cd "$1" }; foo '

alias hs='history | grep'
alias myip='curl http://ipecho.net/plain'

#resume downloads
alias wget='wget -c'

# Ctags.
alias gentags='ctags -R .'

# Let there be color in grep!
alias grep='grep --color=auto --exclude=tags --exclude-dir=.git --exclude-dir=venv'
alias convertCRLF='find ./ -type f -print0 | xargs -0 dos2unix --'

alias httpdreload='sudo /usr/sbin/apachectl -k graceful'
alias httpdtest='sudo /usr/sbin/apachectl -t && /usr/sbin/apachectl -t -D DUMP_VHOSTS'
